<p style="color: green"><%= notice %></p>

<h1>Chileregions</h1>

<div id="chileregions">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Región</th>
        <th scope="col">Acción</th>
      </tr>
    </thead>
    <tbody>
      <% @chileregions.each do |chileregion| %>
        <tr>
          <td><%= chileregion.id %></td>
          <td><%= chileregion.nombre_region %></td>
          <td><%= link_to "Show", chileregion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New chileregion", new_chileregion_path %>
