<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="row g-3">

    <!-- Datos personales -->
      <div class="col-md-3">
          <%= f.label :"Rut",class:"form-label" %><br />
          <%= f.text_field :rut, autofocus: true, autocomplete: "rut", class:"form-control" %>
      </div>
      <div class="col-md-9">
          <%= f.label :"Razon Social",class:"form-label" %><br />
          <%= f.text_field :razon_social, autofocus: true, autocomplete: "razon_social", class:"form-control" %>
      </div>
      <div class="col-md-12">
          <%= f.label :"Representante Legal",class:"form-label" %><br />
          <%= f.text_field :representante_legal, autofocus: true, autocomplete: "representante_legal", class:"form-control" %>
      </div>
    <br>
    <!-- Contacto -->
      <div class="col-md-3">
        <%= f.label :"Teléfono",class:"form-label"  %><br />
        <%= f.email_field :telefono, autofocus: true, autocomplete: "telefono", class:"form-control" %>
      </div>
      <div class="col-md-9">
        <%= f.label :"e-mail",class:"form-label"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

    <br>
    <!-- Direccion -->
      <div class="col-md-9">
        <%= f.label :"Calle" ,class:"form-label"%><br />
        <%= f.text_field :calle, autofocus: true, autocomplete: "calle", class:"form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.label :"Nro.",class:"form-label" %><br />
        <%= f.text_field :numero, autofocus: true, autocomplete: "numero", class:"form-control" %>
      </div>

      
    <!-- Tipo entidad -->
    <br>
    <!-- Contraseña -->
      <div class="col-md-6">
          <%= f.label :"Contraseña" ,class:"form-label"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :"Confirmar contraseña",class:"form-label" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

    <br>
    <!-- Acciones -->
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>

  </div>


<% end %>

<%= render "devise/shared/links" %>
<br>
